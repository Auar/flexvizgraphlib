<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
	
<mx:WipeUp id="wipeUp" duration="1000" />
<mx:WipeDown id="wipeDown" duration="1000" />
<mx:Fade id="fadeIn" alphaFrom="0" alphaTo="1" duration="500" />
<mx:Fade id="fadeOut" alphaFrom="1" alphaTo="0" duration="500" />
<mx:Glow id="glowImage" duration="500" 
        alphaFrom="1.0" alphaTo="0.3" 
        blurXFrom="0.0" blurXTo="50.0" 
        blurYFrom="0.0" blurYTo="50.0" 
        color="0x666666"/>
<mx:Glow id="unglowImage" duration="500" 
        alphaFrom="0.3" alphaTo="1.0" 
        blurXFrom="50.0" blurXTo="0.0" 
        blurYFrom="50.0" blurYTo="0.0" 
        color="0xCCCCCC"/>
	
	
</mx:Canvas>
