<CanvasButtonAccordionHeader verticalScrollPolicy="off" horizontalScrollPolicy="off" 
	xmlns="http://code.google.com/p/flexlib/" 
	xmlns:mx="http://www.adobe.com/2006/mxml" >
	
	<mx:Script>
		<![CDATA[
			import org.un.birdeye.measure.Measure;
			import mx.controls.ComboBox;
			import mx.controls.Label;
			import mx.containers.Canvas;
			import mx.controls.Button;
			import mx.controls.Alert;
			public var canvasNum:int;
			
			private function addPianoCnvs():void {				
				var pianoCnvs:Canvas;
				pianoCnvs = new Canvas();
				canvasNum=parentDocument.leftAccordion.numChildren+1;
				pianoCnvs.id="piano"+canvasNum;
				pianoCnvs.name="piano"+canvasNum;
				pianoCnvs.label="Chart Builder " + (canvasNum).toString();
				parentDocument.addDefaultChildToCnvs(pianoCnvs,canvasNum);
				parentDocument.leftAccordion.addChild(pianoCnvs);
				headerBar.removeChild(addDashboard);
				
			}
			
			
			
			
		]]>
	</mx:Script>
	<mx:VBox id="headerBar" width="100%" height="25" verticalAlign="middle" horizontalAlign="right" paddingRight="5" >
		<mx:Button id="addDashboard" toolTip="Click to add a new chart" height="20" width="20" icon="@Embed('/org/un/birdeye/images/ui/zoomin.png')" includeInLayout="true" click="addPianoCnvs();" />
	</mx:VBox>
	
</CanvasButtonAccordionHeader>
