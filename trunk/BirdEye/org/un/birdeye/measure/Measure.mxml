	public function ParseAxis(Axis:XML,arrDefAxis:Array):void { 
		var AxisAttributes:XMLList = Axis.children().attributes(); 
		var i:int = 0;
		var n:String = "";
		for each (var axisElements:XML in AxisAttributes) { 
		n = axisElements.name();	
  		if (n.substr(0,4) != "nodeName") {
  			arrDefAxis[i]=n;
  			i++
			}
		} 
		arrDefAxis.sort();
		removeDup(arrDefAxis);		
	}
	
