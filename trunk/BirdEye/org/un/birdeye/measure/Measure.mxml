				piano.getChildByName("cbRadius"+num).visible=false;
			}
		}
		
		//Show hide field for pie chart
		for (num=1; num<=numberOfSeries; num++) {
    		if (strChartType=="Pie")
			{
				if(num==1){
					Label(piano.getChildByName("lblyAxis"+num)).text="Field :";
