<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="center">

<mx:Script>
	<![CDATA[
	import mx.collections.ArrayCollection;
	
	private function viewRecord(e:Event):void
	{
		parentDocument.nodeControl.selectedIndex = 1;
		parentDocument.nodeModule.nodevs.selectedIndex = 0;
		
	}
	
	private function editRecord(e:Event):void
	{
		
		parentDocument.nodeControl.selectedIndex = 1;
		parentDocument.nodeModule.nodevs.selectedIndex = 1;  // flip to "edit" canvas of module viewstack
		}
	
	private function viewChildren(e:Event):void
	{
		parentDocument.getChildNodes(parentDocument.dgNodeRequest.selectedItem);
		
	}
	
	private function viewMeta(e:Event):void
	{
		parentDocument.getNodeMeta(parentDocument.dgNodeRequest.selectedItem);
		parentDocument.tbMain.selectedIndex=2; // Move to Node Meta Canvas
		// parentDocument.tbMain.nodeMetaCnvs.nodeMetaControl.selectedIndex = 0; // Keep focus on first panel of Accordion
	}
		
		
	]]>
</mx:Script>

	<mx:Button toolTip="Click to view record" icon="@Embed(source='../images/ui/view.png')" width="30" click="viewRecord(event);" />
	<mx:Button toolTip="Click to edit record" icon="@Embed(source='../images/ui/edit.png')" width="30" click="editRecord(event);" />
	<mx:Button toolTip="Click to delete record" icon="@Embed(source='../images/ui/delete.png')" width="30" click="editRecord(event);"/>
	<mx:Button toolTip="Click to view meta data for this node" icon="@Embed(source='../images/ui/meta.png')" width="30" click="viewMeta(event);" />
	<mx:Button toolTip="Click to view links to this node" icon="@Embed(source='../images/ui/children.png')" width="30" click="viewChildren(event);" />
</mx:HBox>
